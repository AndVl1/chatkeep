# Chatkeep Environment Variables
# Copy this file to .env and fill in the values

# Required: Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Required: Admin Bot Token for web authentication (Telegram Login Widget)
# This is the token for the bot used in the Login Widget on chatmoderatorbot.ru
# Get from @BotFather for your admin bot (e.g., @chatAutoModerBot)
TELEGRAM_ADMIN_BOT_TOKEN=your_admin_bot_token_here

# Database Configuration (defaults work for local docker-compose)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chatkeep
DB_USERNAME=chatkeep
DB_PASSWORD=chatkeep

# Optional: Logging level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Required for web authentication (Telegram Login Widget)
# Must be at least 32 characters. Generate with: openssl rand -base64 48
JWT_SECRET=some_jw-token_min_32_chars

# JWT expiration in hours (default: 24)
JWT_EXPIRATION_HOURS=24

# Mini App URL (for Telegram Mini App integration)
MINI_APP_URL=

# Production deployment only:
# GITHUB_REPOSITORY=owner/chatkeep
# IMAGE_TAG=latest

# GitHub PAT for CI/CD workflows (optional, needed for Deploy feature in mobile app)
# Create at: https://github.com/settings/tokens with 'workflow' and 'repo' scopes
GITHUB_PAT=

# Monitoring (REQUIRED: Set strong credentials for Grafana)
# Generate secure password with: openssl rand -base64 32
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_to_secure_password
